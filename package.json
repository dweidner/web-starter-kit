{
  "name": "@dweidner/web-starter-kit",
  "version": "0.1.0",
  "description": "An opinionated starter template for building websites",
  "repository": "dweidner/web-starter-kit",
  "author": "Daniel Weidner <hallo@danielweidner.de>",
  "license": "MIT",
  "browser": "dist/scripts/main.js",
  "module": "dist/scripts/main.mjs",
  "style": " dist/styles/main.css",
  "private": true,
  "keywords": [
    "babel",
    "eslint",
    "postcss",
    "rollup",
    "stylelint"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "dist/{scripts,styles}/*.{css,js,map}",
    "src/scripts/**/*.js",
    "src/styles/**/*.css"
  ],
  "browserslist": {
    "modern": [
      "last 2 Chrome versions",
      "not Chrome < 60",
      "last 2 Safari versions",
      "not Safari < 10.1",
      "last 2 iOS versions",
      "not iOS < 10.3",
      "last 2 Firefox versions",
      "not Firefox < 54",
      "last 2 Edge versions",
      "not Edge < 15"
    ],
    "legacy": [
      "> 1%",
      "last 2 versions",
      "Firefox ESR",
      "not dead"
    ]
  },
  "scripts": {
    "start": "run-s --silent clean watch",
    "clean": "rimraf dist",
    "build": "run-s --silent --print-label clean build:*",
    "build:scripts": "rollup -c",
    "build:styles": "postcss 'src/styles/*.css' --dir dist --base src --map",
    "watch": "run-p --silent --print-label --continue-on-error watch:*",
    "watch:scripts": "rollup -c --watch --no-watch.clearScreen",
    "watch:styles": "postcss 'src/styles/*.css' --dir dist --base src --watch --verbose",
    "lint": "run-s --silent --print-label lint:*",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint 'src/styles/**/*.css'"
  },
  "dependencies": {
    "core-js": "^3.18.1",
    "dynamic-import-polyfill": "^0.1.1",
    "whatwg-fetch": "^3.6.2",
    "wicked-elements": "^3.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.15.7",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@dweidner/stylelint-config": "^3.0.0",
    "@dweidner/stylelint-config-property-order": "^1.2.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "autoprefixer": "^10.3.6",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-compat": "^3.13.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^36.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.7",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^9.0.2",
    "postcss-color-functional-notation": "^4.0.0",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^12.0.0",
    "postcss-gap-properties": "^3.0.0",
    "postcss-import": "^14.0.2",
    "postcss-inset": "^1.0.0",
    "postcss-nesting": "^8.0.1",
    "postcss-url": "^10.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.13.1"
  }
}
