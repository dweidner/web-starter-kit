{
  "name": "@dweidner/web-starter-kit",
  "version": "0.1.2",
  "description": "An opinionated starter template for building websites",
  "repository": "dweidner/web-starter-kit",
  "author": "Daniel Weidner <hallo@danielweidner.de>",
  "license": "ISC",
  "browser": "dist/scripts/main.js",
  "module": "dist/scripts/main.mjs",
  "style": " dist/styles/main.css",
  "private": true,
  "keywords": [
    "babel",
    "eslint",
    "postcss",
    "rollup",
    "stylelint"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "dist/{scripts,styles}/*.{css,js,map}",
    "src/scripts/**/*.js",
    "src/styles/**/*.css"
  ],
  "browserslist": {
    "modern": [
      "last 2 Chrome versions",
      "not Chrome < 60",
      "last 2 Safari versions",
      "not Safari < 10.1",
      "last 2 iOS versions",
      "not iOS < 10.3",
      "last 2 Firefox versions",
      "not Firefox < 54",
      "last 2 Edge versions",
      "not Edge < 15"
    ],
    "legacy": [
      "> 1%",
      "last 2 versions",
      "Firefox ESR",
      "not dead"
    ]
  },
  "scripts": {
    "start": "run-s clean watch",
    "clean": "rimraf dist",
    "build": "run-s clean build:*",
    "build:scripts": "rollup -c",
    "build:styles": "postcss 'src/styles/*.css' --dir dist --base src --map",
    "watch": "run-p --print-label --continue-on-error watch:*",
    "watch:scripts": "rollup -c --watch --no-watch.clearScreen",
    "watch:styles": "postcss 'src/styles/*.css' --dir dist --base src --watch --verbose",
    "lint": "run-s lint:*",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint 'src/styles/**/*.css'"
  },
  "dependencies": {
    "core-js": "^3.22.3",
    "dynamic-import-polyfill": "^0.1.1",
    "whatwg-fetch": "^3.6.2",
    "wicked-elements": "^3.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "autoprefixer": "^10.4.4",
    "cssnano": "^5.1.7",
    "eslint": "^8.12.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^38.1.6",
    "eslint-plugin-promise": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-calc": "^8.2.4",
    "postcss-cli": "^9.1.0",
    "postcss-color-functional-notation": "^4.2.2",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^12.1.6",
    "postcss-gap-properties": "^3.0.3",
    "postcss-import": "^14.1.0",
    "postcss-inset": "^1.0.0",
    "postcss-nesting": "^10.1.4",
    "postcss-url": "^10.1.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.6.1",
    "stylelint-config-standard": "^25.0.0"
  }
}
