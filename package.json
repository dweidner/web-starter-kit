{
  "name": "@dweidner/web-starter-kit",
  "version": "1.0.0",
  "description": "An opinionated starter template for building websites",
  "repository": "dweidner/web-starter-kit",
  "author": "Daniel Weidner <hallo@danielweidner.de>",
  "license": "ISC",
  "type": "module",
  "private": true,
  "keywords": [
    "vite",
    "postcss",
    "eslint",
    "stylelint"
  ],
  "engines": {
    "node": "20.11.x",
    "npm": "10.x.x"
  },
  "browserslist": [
    "defaults",
    "supports css-variables",
    "supports es6-module",
    "supports es6-module-dynamic-import"
  ],
  "scripts": {
    "start": "npm run --silent dev",
    "test": "npm run --silent lint",
    "serve": "vite serve --host",
    "build": "vite build --emptyOutDir",
    "lint": "run-s lint:*",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint 'src/styles/**/*.css'"
  },
  "dependencies": {
    "postcss": "^8.4.35",
    "postcss-jit-props": "^1.0.14",
    "postcss-preset-env": "^9.5.0",
    "vite": "^5.1.5"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "npm-run-all": "^4.1.5",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-selector-bem-pattern": "^4.0.0"
  }
}
